{% extends 'base.html.twig' %}

{% block title %}Connexion Professeur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }

        .login-wrapper {
            min-height: 100vh;
            background: linear-gradient(to right, #7c3aed, #8b5cf6, #ec4899);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }

        .login-container {
            width: 100%;
            max-width: 80rem;
            display: grid;
            grid-template-columns: 1fr;
            gap: 2rem;
            align-items: center;
        }

        @media (min-width: 768px) {
            .login-container {
                grid-template-columns: 1fr 1fr;
            }
        }

        /* Section gauche - Pr√©sentation */
        .presentation-section {
            color: white;
            display: none;
        }

        @media (min-width: 768px) {
            .presentation-section {
                display: block;
            }
        }

        .logo-header {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 2rem;
        }

        .logo-icon {
            width: 2.5rem;
            height: 2.5rem;
            background: white;
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

        .logo-title {
            font-size: 2.25rem;
            font-weight: bold;
        }

        .presentation-text {
            font-size: 1.125rem;
            line-height: 1.75;
            margin-bottom: 3rem;
            color: rgba(243, 232, 255, 0.9);
        }

        .feature-card {
            background: linear-gradient(135deg, rgba(192, 132, 252, 0.3), rgba(251, 207, 232, 0.3));
            border-radius: 1rem;
            padding: 2rem;
            backdrop-filter: blur(8px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            margin-bottom: 3rem;
        }

        .feature-image {
            aspect-ratio: 16/9;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 0.75rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .feature-icon {
            text-align: center;
        }

        .feature-icon-emoji {
            font-size: 3rem;
            margin-bottom: 0.75rem;
        }

        .feature-icon-text {
            color: rgba(255, 255, 255, 0.8);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1rem;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(8px);
            border-radius: 0.5rem;
            padding: 1rem;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .stat-number {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .stat-label {
            font-size: 0.875rem;
            color: rgba(243, 232, 255, 0.9);
        }

        /* Section droite - Formulaire */
        .form-section {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            padding: 2.5rem;
        }

        @media (min-width: 768px) {
            .form-section {
                padding: 2.5rem;
            }
        }

        .form-header {
            margin-bottom: 2rem;
        }

        .form-title {
            font-size: 1.875rem;
            font-weight: bold;
            color: #111827;
            margin-bottom: 0.5rem;
        }

        .form-subtitle {
            color: #6b7280;
        }

        .alert {
            padding: 1rem;
            border-radius: 0.5rem;
            margin-bottom: 1.5rem;
        }

        .alert-danger {
            background-color: #fee2e2;
            color: #991b1b;
            border: 1px solid #fecaca;
        }

        .alert-info {
            background-color: #dbeafe;
            color: #1e40af;
            border: 1px solid #bfdbfe;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: #374151;
            margin-bottom: 0.5rem;
        }

        .input-wrapper {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #9ca3af;
            width: 1.25rem;
            height: 1.25rem;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem 1rem 0.75rem 3rem;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            font-size: 1rem;
            transition: all 0.2s;
            outline: none;
        }

        .form-control:focus {
            border-color: transparent;
            ring: 2px;
            ring-color: #8b5cf6;
            box-shadow: 0 0 0 2px rgba(139, 92, 246, 0.5);
        }

        .password-wrapper {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #9ca3af;
            cursor: pointer;
            padding: 0;
            width: 1.25rem;
            height: 1.25rem;
        }

        .password-toggle:hover {
            color: #6b7280;
        }

        .form-options {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1.5rem;
        }

        .checkbox-wrapper {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            cursor: pointer;
        }

        .checkbox-wrapper input[type="checkbox"] {
            width: 1rem;
            height: 1rem;
            border-radius: 0.25rem;
            border: 1px solid #d1d5db;
            cursor: pointer;
        }

        .checkbox-label {
            font-size: 0.875rem;
            color: #374151;
        }

        .forgot-link {
            font-size: 0.875rem;
            color: #7c3aed;
            text-decoration: none;
            font-weight: 500;
        }

        .forgot-link:hover {
            color: #6d28d9;
        }

        .btn-submit {
            width: 100%;
            background: linear-gradient(to right, #7c3aed, #6d28d9);
            color: white;
            font-weight: bold;
            padding: 0.75rem;
            border: none;
            border-radius: 0.5rem;
            cursor: pointer;
            transition: all 0.2s;
            font-size: 1rem;
        }

        .btn-submit:hover {
            background: linear-gradient(to right, #6d28d9, #5b21b6);
        }

        .btn-submit:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .signup-text {
            margin-top: 2rem;
            text-align: center;
            color: #6b7280;
        }

        .signup-link {
            color: #7c3aed;
            text-decoration: none;
            font-weight: 600;
        }

        .signup-link:hover {
            color: #6d28d9;
        }

        /* Icons SVG */
        svg {
            width: 100%;
            height: 100%;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="login-wrapper">
        <div class="login-container">

            <!-- Section gauche - Pr√©sentation -->
            <div class="presentation-section">
                <div class="logo-header">
                    <div class="logo-icon">
                        üë®‚Äçüè´
                    </div>
                    <h1 class="logo-title">ClassRoom Professeurs</h1>
                </div>

                <p class="presentation-text">
                    Votre espace d√©di√© √† l'enseignement. G√©rez vos cours, suivez vos √©tudiants et partagez vos connaissances efficacement.
                </p>

                <div class="feature-card">
                    <div class="feature-image">
                        <div class="feature-icon">
                            <div class="feature-icon-emoji">üìä</div>
                            <p class="feature-icon-text">Tableau de bord enseignant</p>
                        </div>
                    </div>
                </div>

                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-number">200+</div>
                        <div class="stat-label">Professeurs</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number">10k+</div>
                        <div class="stat-label">√âtudiants</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number">500+</div>
                        <div class="stat-label">Cours</div>
                    </div>
                </div>
            </div>

            <!-- Section droite - Formulaire -->
            <div class="form-section">
                <div class="form-header">
                    <h2 class="form-title">Espace Professeur</h2>
                    <p class="form-subtitle">Connectez-vous pour acc√©der √† votre tableau de bord</p>
                </div>

                <form method="post" id="loginForm">

                    {# Affichage des erreurs #}
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="alert alert-info">
                            Vous √™tes connect√© en tant que {{ app.user.userIdentifier }},
                            <a href="{{ path('app_logout') }}">D√©connexion</a>
                        </div>
                    {% endif %}

                    {# Email #}
                    <div class="form-group">
                        <label for="inputEmail" class="form-label">Adresse email professionnelle</label>
                        <div class="input-wrapper">
                            <svg class="input-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                            <input
                                type="email"
                                value="{{ last_username }}"
                                name="_username"
                                id="inputEmail"
                                class="form-control"
                                placeholder="professeur@example.com"
                                autocomplete="email"
                                required
                                autofocus
                            >
                        </div>
                    </div>

                    {# Mot de passe #}
                    <div class="form-group">
                        <label for="inputPassword" class="form-label">Mot de passe</label>
                        <div class="input-wrapper password-wrapper">
                            <svg class="input-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                            </svg>
                            <input
                                type="password"
                                name="_password"
                                id="inputPassword"
                                class="form-control"
                                placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                                autocomplete="current-password"
                                required
                            >
                            <button type="button" class="password-toggle" id="togglePassword">
                                <svg id="eyeIcon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                </svg>
                            </button>
                        </div>
                    </div>

                    {# Options #}
                    <div class="form-options">
                        <label class="checkbox-wrapper">
                            <input type="checkbox" name="_remember_me" id="rememberMe">
                            <span class="checkbox-label">Se souvenir de moi</span>
                        </label>
                        <a href="#" class="forgot-link">Mot de passe oubli√© ?</a>
                    </div>

                    {# CSRF Token #}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {# Bouton de connexion #}
                    <button type="submit" class="btn-submit">
                        Se connecter
                    </button>
                </form>

                {# Lien d'inscription #}
                <p class="signup-text">
                    Nouveau professeur ?
                    <a href="#" class="signup-link">Demander un acc√®s</a>
                </p>
            </div>
        </div>
    </div>

    <script>
        // Toggle password visibility
        document.getElementById('togglePassword').addEventListener('click', function() {
            const passwordInput = document.getElementById('inputPassword');
            const eyeIcon = document.getElementById('eyeIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.innerHTML = `
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
            `;
            } else {
                passwordInput.type = 'password';
                eyeIcon.innerHTML = `
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            `;
            }
        });

        // Enter key submit
        document.getElementById('inputPassword').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                document.getElementById('loginForm').submit();
            }
        });
    </script>
{% endblock %}
